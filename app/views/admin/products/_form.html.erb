<%= form_for [:admin, @product] do |f| %>
<div class="col-sm-10"  style="padding-left: 30px">
  <%= render 'layouts/flash'%>
  <div class="image col-sm-5" >
    <%= image_tag(@product.image_url, size: "400x450") %>
    Link hình ảnh: <%= f.text_field :image_url, class: "form-control" %><br />
  </div>
  <div class="content col-sm-6" style="float: right;" >
    <h3>Tên sản phẩm </h3>
    <%= f.text_field :name, class: "form-control" %>
    <h3 class="price">
      Giá:
      <strong>
        <%= f.number_field :price, min: '0', class: "form-control" %> </strong>
    </h3>
    Hàng còn: <%= f.number_field :stock, type: "number", class: "form-control" %>
    <p class="rating" style="">
      <span class="rating-content">
        <i class="glyphicon glyphicon-star"></i>
        <i class="glyphicon glyphicon-star"></i>
        <i class="glyphicon glyphicon-star"></i>
        <i class="glyphicon glyphicon-star"></i>
        <i class="glyphicon glyphicon-star-empty"></i>
      </span>
    </p>
    </br>
    <div>
      Mô tả: <br> 
      <%= f.text_area :description, class: "form-control",rows: "12" %><br />
    </div>
    <%= f.submit "Submit", class: "btn btn-success btn-sm" %>
    <%= link_to "Xoa", admin_product_path(@product.id), data:{ confirm: "Are you sure?", method: "delete"}, class: "btn btn-danger btn-sm deletebtn" %>
  </div>
</div>
<% end %>
