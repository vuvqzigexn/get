<div class="col-md-2 categories-list">
  <ul class="list-group">
  <% @categories = Category.all %>
    <% @categories.each do |cate| %>
      <li class="list-group-item" >
        <b><%= link_to(cate.name, cate) %></b>
        <strong style="color: red; float: right;"> <%= cate.products.count %> </strong>
      </li>
    <% end %>
  </ul>
</div>